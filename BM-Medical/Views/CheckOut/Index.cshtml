@{
    ViewData["Title"] = "Alışverişi Tamamla";
}

<!-- Shopping Cart Section Begin -->
<section class="checkout-section spad">
    <div class="container">
        <form action="#" class="checkout-form">
            <div class="row">
                <div class="col-lg-6">
                    <h4>Fatura Detayı</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <label for="fir">@Labels.Name<span>*</span></label>
                            <input type="text" id="fir">
                        </div>
                        <div class="col-lg-6">
                            <label for="last">@Labels.Surname<span>*</span></label>
                            <input type="text" id="last">
                        </div>
                        <div class="col-lg-12">
                            <label for="street">@Labels.Adress<span>*</span></label>
                            <input type="text" id="street" class="street-first">
                        </div>
                        <div class="col-lg-12">
                            <label for="town">@Labels.City<span>*</span></label>
                            <input type="text" id="town">
                        </div>
                        <div class="col-lg-6">
                            <label for="email">@Labels.Mail<span>*</span></label>
                            <input type="text" id="email">
                        </div>
                        <div class="col-lg-6">
                            <label for="phone">@Labels.PhoneNumber<span>*</span></label>
                            <input type="text" id="phone">
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="place-order">
                        <h4>@Labels.YourOrders</h4>
                        <div class="order-total">
                            <ul class="order-table">
                                <li>Product <span>@Labels.TotalPrice</span></li>
                                <li class="fw-normal">@Labels.Combination<span>@Labels.Price</span></li>
                                <li class="fw-normal">@Labels.Combination <span>@Labels.Price</span></li>
                                <li class="total-price">@Labels.TotalPrice <span>@Labels.Price</span></li>
                            </ul>
                            <div class="order-btn">
                                <button type="submit" class="site-btn place-btn">@Labels.CompleteOrder</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- Shopping Cart Section End -->
