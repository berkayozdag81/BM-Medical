@model List<Product>
@{ Layout = "_LayoutAdmin"; }
<div class="container-fluid">
    <h1 class="dash-title">Ürünler</h1>
    <div class="row">
        <div class="col-lg-12">
            <p>
                <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                    Ürün Ekle
                </a>
            </p>
            <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    <form asp-controller="Admin" asp-action="ProductList" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-sm-12 pb-3">
                                <div class="form-group col-md-6">
                                    <label for="inputEmail4">Ürün Adı</label>
                                    <input type="text" class="form-control" placeholder="">
                                    <span class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-2">
                                    <label for="inputEmail4">Fiyat (₺)</label>
                                    <input type="number" min="0.5" step=0.1 class="form-control"  placeholder="">
                                    <span class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-2">
                                    <label for="inputEmail4">Stok</label>
                                    <input min="0" type="number" class="form-control" placeholder="">
                                    <span  class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-2">
                                    <label for="inputEmail4">Ürün Id</label>
                                    <input type="number" readonly class="form-control"  placeholder="Ürün Id">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inputEmail4">Kategori</label>
                                    <select class="form-control" name="categoryId">
                                        <option value="">Kategori Seçiniz</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="inputAddress">Ürün Açıklaması</label>
                                    <textarea class="form-control" rows="10"></textarea>
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </form>
                </div>
            </div>
            <div class="card easion-card">
                <div class="card-header">
                    <div class="easion-card-icon">
                        <i class="fas fa-table"></i>
                    </div>
                    <div class="easion-card-title">Ürün Bilgileri</div>
                </div>
                <div class="card-body ">
                    <table id="example" class="table table-hover table-in-card dt-responsive" style="width:100%">
                        <thead>
                            <tr>
                                <th scope="col">Ürün Id</th>
                                <th scope="col">Resim</th>
                                <th scope="col">Ürün Adı</th>
                                <th scope="col">Fiyatı</th>
                                <th scope="col">Stok</th>
                                <th scope="col">Kategorisi</th>
                                <th scope="col">Düzenle/Sil</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.5/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.5/js/responsive.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                language: {
                    url: "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json",
                },

            });
        });</script>
}