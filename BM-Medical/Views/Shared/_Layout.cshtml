<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Fashi Template">
    <meta name="keywords" content="Fashi, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>BM-Medical</title>
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <!-- Css Styles -->
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/themify-icons.css" type="text/css">
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/style.css" type="text/css">
</head>
<body>
    <!-- Header Section Begin -->
    <header class="header-section">
        <div class="header-top">
            <div class="container">
                <div class="ht-left">
                    <div class="mail-service">
                        <i class="fa fa-envelope"></i>
                        bm_medical@gmail.com
                    </div>
                    <div class="phone-service">
                        <i class="fa fa-phone"></i>
                        0532 111 22 33
                    </div>
                </div>
                <div class="ht-right">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-area="Identity" asp-page="/Account/Login" class="login-panel"><i class="fa fa-user"></i>Giriş Yap</a>
                        <a asp-area="Identity" asp-page="/Account/Register" class="login-panel"><i class="fa fa-user"></i>Kayıt Ol</a>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="nav-link btn btn-link text-dark">
                                <i class="fa fa-user"> Çıkış</i>
                            </button>
                        </form>

                    }


                    <div class="lan-selector">
                        <select class="language_drop" name="countries" id="countries" style="width:300px;">
                            <option value='yu' data-image="" data-imagecss="flag yu"
                                    data-title="Bangladesh">
                                Türkçe
                            </option>
                            <option value='yt' data-image="" data-imagecss="flag yt"
                                    data-title="English">
                                İngilizce
                            </option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="inner-header">
                <div class="row">
                    <div class="col-lg-2 col-md-2">
                        <div class="logo">
                            <a asp-controller="Home" asp-action="Index">
                                <img src="/lib/bootstrap/dist/img/logo-carousel/yeniLogo.png" alt="">
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-5">
                        <div class="advanced-search">
                            <div class="input-group">
                                <input type="text" placeholder="Neye İhtiyacın Var?">
                                <button type="button"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 text-right col-md-5">
                        <ul class="nav-right">
                            <li class="heart-icon">
                                <a href="#">
                                    <i class="icon_heart_alt"></i>
                                    <span>1</span>
                                </a>
                            </li>
                            <li class="cart-icon">
                                <a href="#">
                                    <i class="icon_bag_alt"></i>
                                    <span>3</span>
                                </a>
                                <div class="cart-hover">
                                    <div class="select-items">
                                        <table>
                                            <tbody>
                                                <tr>
                                                    <td class="si-pic"><img src="/lib/bootstrap/dist/img/products/dezenfektan3.1.jpg" alt=""></td>
                                                    <td class="si-text">
                                                        <div class="product-selected">
                                                            <p>$60.00 x 1</p>
                                                            <h6>Kabino Bedside Table</h6>
                                                        </div>
                                                    </td>
                                                    <td class="si-close">
                                                        <i class="ti-close"></i>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td class="si-pic"><img src="/lib/bootstrap/dist/img/products/dezenfektan1.1.jpg" alt=""></td>
                                                    <td class="si-text">
                                                        <div class="product-selected">
                                                            <p>$60.00 x 1</p>
                                                            <h6>Kabino Bedside Table</h6>
                                                        </div>
                                                    </td>
                                                    <td class="si-close">
                                                        <i class="ti-close"></i>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="select-button">
                                        @if (User.IsInRole("Admin") || User.IsInRole("Customer"))
                                        {
                                            <a asp-controller="Cart" asp-action="Index" class="primary-btn view-card">Sepete Git</a>
                                            <a asp-controller="CheckOut" asp-action="Index" class="primary-btn checkout-btn">Alışverişi Tamamla</a>
                                        }
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="nav-item">
            <div class="container">
                <nav class="nav-menu mobile-menu">
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        <li><a asp-controller="Shop" asp-action="Index">Mağaza</a></li>
                        <li><a asp-controller="Contact" asp-action="Index">İletişim</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li><a asp-controller="Admin" asp-action="Index">Admin Paneli</a></li>
                        }
                    </ul>
                </nav>
                <div id="mobile-menu-wrap"></div>
            </div>
        </div>
    </header>
    <!-- Header End -->

    @RenderBody()

    <!-- Footer Section Begin -->
    <footer class="footer-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-5">
                    <div class="footer-left">
                        <div class="footer-logo">
                            <a asp-controller="Home" asp-action="Index"><img src="/lib/bootstrap/dist/img/logo-carousel/yeniLogo.png" alt=""></a>
                        </div>
                        <ul>
                            <li>Adres: Sakarya</li>
                            <li>Telefon: 0532 777 11 22</li>
                            <li>Email: hello.colorlib@gmail.com</li>
                        </ul>
                        <div class="footer-social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 offset-lg-1">
                    <div class="footer-widget">
                        <h5>Bilgi</h5>
                        <ul>
                            <li><a asp-controller="CheckOut" asp-action="Index"></a></li>
                            <li><a asp-controller="Contact" asp-action="Index">İletişim</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="footer-widget">
                        <h5>Benim Hesabım</h5>
                        <ul>
                            <li><a asp-controller="Contact" asp-action="Index">İletişim</a></li>
                            <li><a asp-controller="Cart" asp-action="Index">Sepet</a></li>
                            <li><a asp-controller="Shop" asp-action="Index">Alışveriş</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="copyright-reserved">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="copyright-text">
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script>  |  Created by Berkay & Metin
                        </div>
                        <div class="payment-pic">
                            <img src="/lib/bootstrap/dist/img/payment-method.png" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->
    <!-- Js Plugins -->
    <script src="/lib/bootstrap/dist/js/jquery-3.3.1.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/lib/bootstrap/dist/js/jquery-ui.min.js"></script>
    <script src="/lib/bootstrap/dist/js/jquery.countdown.min.js"></script>
    <script src="/lib/bootstrap/dist/js/jquery.nice-select.min.js"></script>
    <script src="/lib/bootstrap/dist/js/jquery.zoom.min.js"></script>
    <script src="/lib/bootstrap/dist/js/jquery.dd.min.js"></script>
    <script src="/lib/bootstrap/dist/js/jquery.slicknav.js"></script>
    <script src="/lib/bootstrap/dist/js/owl.carousel.min.js"></script>
    <script src="/lib/bootstrap/dist/js/main.js"></script>
</body>
</html>
